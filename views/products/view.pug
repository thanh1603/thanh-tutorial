extends ../layouts/common2
block content
    h1 
        span.mr-5 List-cart-for-you 
    .d-flex.align-items-center
    form.ml-auto(action="/products/view", method="GET", class="d-flex" style = "border: 1px solid #DDD;")
      input(type="text", name="q", class="form-control")
      button(class="btn btn-primary ml-2") Search

    .row
      each product in products
       .col-sm-6.col-md-4.col-lg-3
         .card.mb-3
           img.card-img-top(src=product.img)
           .card-body
             h5.card-title= product.name